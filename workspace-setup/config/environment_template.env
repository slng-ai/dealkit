# Sales Workspace Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Company Information
COMPANY_NAME="Your Company Name"
COMPANY_DOMAIN="yourcompany.com"

# Authentication Provider
VAULT_URL="https://vault.yourcompany.com"
VAULT_TOKEN="your-vault-token"

# Slack Integration
SLACK_WORKSPACE="your-workspace"
SLACK_BOT_TOKEN="xoxb-your-bot-token"
SLACK_USER_TOKEN="xoxp-your-user-token"
SLACK_SIGNING_SECRET="your-signing-secret"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# Gong Integration
GONG_ACCESS_KEY="your-gong-access-key"
GONG_ACCESS_SECRET="your-gong-access-secret"
GONG_WEBHOOK_SECRET="your-webhook-secret"

# Granola Integration
GRANOLA_API_ENDPOINT="https://api.granola.io"
GRANOLA_API_KEY="your-granola-api-key"

# Email Integration (Gmail)
GMAIL_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GMAIL_CLIENT_SECRET="your-client-secret"
GMAIL_REFRESH_TOKEN="your-refresh-token"

# Salesforce Integration
SFDC_INSTANCE_URL="https://yourcompany.my.salesforce.com"
SFDC_CLIENT_ID="your-salesforce-client-id"
SFDC_CLIENT_SECRET="your-salesforce-client-secret"
SFDC_USERNAME="your-salesforce-username"
SFDC_SECURITY_TOKEN="your-security-token"

# Supabase Integration
SUPABASE_URL="https://yourproject.supabase.co"
SUPABASE_SERVICE_KEY="your-service-role-key"
SUPABASE_ANON_KEY="your-anon-key"

# Notion Integration
NOTION_API_KEY="secret_your-notion-api-key"
NOTION_WORKSPACE_ID="your-workspace-id"
NOTION_CUSTOMERS_DB="your-customers-database-id"
NOTION_DEALS_DB="your-deals-database-id"
NOTION_REPORTS_DB="your-reports-database-id"

# Grafana Integration
GRAFANA_URL="https://grafana.yourcompany.com"
GRAFANA_API_KEY="your-grafana-api-key"
GRAFANA_ORG_ID="1"

# GitHub Integration
GITHUB_TOKEN="ghp_your-github-token"
GITHUB_ORG="your-org"

# LinkedIn Sales Navigator
LINKEDIN_SESSION_COOKIE="your-session-cookie"
LINKEDIN_CSRF_TOKEN="your-csrf-token"

# Google Workspace
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:8080/callback"

# Database Configuration
REDIS_URL="redis://localhost:6379"
ELASTICSEARCH_URL="http://localhost:9200"

# API Configuration
API_PORT="8000"
API_HOST="0.0.0.0"
ENVIRONMENT="development"
LOG_LEVEL="INFO"

# Security
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key"

# Feature Flags
ENABLE_AUTO_SYNC="true"
ENABLE_REAL_TIME_UPDATES="true"
ENABLE_AI_FEATURES="true"

# Monitoring
SENTRY_DSN="https://your-key@sentry.io/your-project"
DATADOG_API_KEY="your-datadog-api-key"